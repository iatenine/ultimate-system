{{! Login Modal }}

<div
  class="modal fade"
  id="login"
  aria-hidden="true"
  aria-labelledby="loginLabel"
  tabindex="-1"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-dark">
      <div class="modal-header">
        <h5 class="modal-title text-light" id="loginTitle">Login</h5>
      </div>
      <div class="modal-body">
        <form class="bg-dark">
          <div class="mb-3">
            <label for="username" class="form-label text-light text-center">User
              Name</label>
            {{! //logged in }}
            <input
              type="text"
              class="form-control bg-secondary"
              id="username"
              aria-describedby="emailHelp"
            />
            <div id="emailHelp" class="form-text text-light">
              We'll never share your email with anyone else.
            </div>
          </div>
          <div class="mb-3">
            <label
              for="userPassword"
              class="form-label text-light text-center"
            >Password</label>
            <input
              type="password"
              class="form-control bg-secondary"
              id="userPassword"
            />
          </div>
          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="stayLogin" />
            <label class="form-check-label text-light" for="stayLogin">Keep me
              logged in</label>
          </div>
          <button
            id="stayloggedin"
            type="submit"
            class="btn btn-secondary"
          >Login</button>
          {{! <a href="/details"></a> }}
        </form>
      </div>
      <div class="modal-footer">
        <button
          class="btn btn-secondary"
          data-bs-target="#register"
          data-bs-toggle="modal"
          data-bs-dismiss="modal"
        >
          Register
        </button>
      </div>
    </div>
  </div>
</div>

{{! Registration Modal }}

<div
  class="modal fade"
  id="register"
  aria-hidden="true"
  aria-labelledby="register"
  tabindex="-1"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-dark">
      <div class="modal-header">
        <h5 class="modal-title text-light" id="registerTitle">Register</h5>
      </div>
      <div class="modal-body text-light">
        <form class="bg-dark">
          <div class="mb-3">
            <label
              for="userEmail"
              class="form-label text-light text-center"
            >User Name</label>
            <input
              type="text"
              class="form-control bg-secondary"
              id="userEmail"
              aria-describedby="emailHelp"
            />
            <div id="emailHelp" class="form-text text-light">
              We'll never share your email with anyone else.
            </div>
          </div>
          <div class="mb-3">
            <label
              for="registerPassword"
              class="form-label text-light text-center"
            >Password</label>
            <input
              type="password"
              class="form-control bg-secondary"
              id="registerPassword"
            />
          </div>
          <div class="mb-3">
            <label
              for="steamUID"
              class="form-label text-light text-center"
            >Steam Username</label>
            <input
              type="text"
              class="form-control bg-secondary"
              id="steamUID"
            />
          </div>
          <div class="mb-3">
            <label for="zipCode" class="form-label text-light text-center">Zip
              Code</label>
            <input
              type="number"
              class="form-control bg-secondary"
              id="zipCode"
            />
          </div>
          <button id="registerID" class="btn btn-secondary">Register</button>
        </form>
      </div>
      <div class="modal-footer">
        <button
          class="btn btn-secondary"
          data-bs-target="#login"
          data-bs-toggle="modal"
        >
          login
          {{! <a href="/details">Login</a> }}
        </button>

        <script src="/js/login.js"></script>
      </div>
    </div>
  </div>
</div>